                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/category"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_transaction_write_caution" />

